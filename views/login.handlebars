<main>
    <div class="titlecard-header">
        <h1 class="title">Login</h1>
    </div>
    <p class="error-center">{{errorMessage}}</p>
    <form action="/login" method="POST" id="login-form" class="login-form">
        <label for="usernameInput">Username:</label>
        <input id="usernameInput" type="text" name="usernameInput"> <br>
        <label for="passwordInput">Password:</label>
        <input id="passwordInput" type="password" name="passwordInput"> <br>
        <button type="submit">Login</button>
    </form>
</main>
<footer>
    <nav>
        <a href="/register">Click here to register</a>
    </nav>
</footer>