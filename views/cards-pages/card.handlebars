<main>
    <h1 id="card-front-h1" class="card-front-h1">{{cardFront}}</h1>
    <h2 id="card-back-h2" class="card-back-h2">{{cardBack}}</h2>
    <div id="error" class="error" hidden>{{errorMessage}}</div>
    <p class="align-left">Edit card:</p>
    <form action="/yourpage/decks/{{id}}/{{cardNumber}}" id="edit-card-form" class="create-card-form">
        <label for="cardFrontInput">Front</label>
        <input id="cardFrontInput" type="text" name="cardFrontInput"> <br>
        <label for="cardBackInput">Back</label>
        <textarea id="cardBackInput" name="cardBackInput" rows="3" cols="50"></textarea> <br>
        <button type="submit">Edit this card</button>
    </form>
    <nav>
        <a href="/yourpage/decks/{{id}}">Back to {{deckName}}</a>
        <div class="align-right">
            <button type="submit" class="delete-card" id="delete-card">Delete this card</button>
        </div>
    </nav>
</main>